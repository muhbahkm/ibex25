generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id            String         @id @default(uuid())
  name          String
  createdAt     DateTime       @default(now())
  customers     Customer[]
  invoices      Invoice[]
  products      Product[]
  users         User[]
  payments      Payment[]
  ledgerEntries LedgerEntry[]
  auditLogs     AuditLog[]

  @@map("stores")
}

model User {
  id                String    @id @default(uuid())
  email             String    @unique
  storeId           String
  createdAt         DateTime  @default(now())
  createdInvoices   Invoice[] @relation("CreatedBy")
  issuedInvoices    Invoice[] @relation("IssuedBy")
  settledInvoices   Invoice[] @relation("SettledBy")
  cancelledInvoices Invoice[] @relation("CancelledBy")
  store             Store     @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@map("users")
}

model Customer {
  id        String    @id @default(uuid())
  name      String
  storeId   String
  isGuest   Boolean   @default(false)
  createdAt DateTime  @default(now())
  store     Store     @relation(fields: [storeId], references: [id], onDelete: Cascade)
  invoices  Invoice[]

  @@map("customers")
}

model Product {
  id           String        @id @default(uuid())
  name         String
  price        Decimal       @db.Decimal(10, 2)
  stock        Int
  storeId      String
  createdAt    DateTime      @default(now())
  invoiceItems InvoiceItem[]
  store        Store         @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@map("products")
}

model Invoice {
  id               String         @id @default(uuid())
  storeId          String
  customerId       String?
  status           InvoiceStatus @default(DRAFT)
  totalAmount      Decimal        @db.Decimal(10, 2)
  paymentType      PaymentType?
  createdBy        String
  createdAt        DateTime      @default(now())
  items            InvoiceItem[]
  payment          Payment?
  ledgerEntries    LedgerEntry[]
  creator          User           @relation("CreatedBy", fields: [createdBy], references: [id])
  customer         Customer?      @relation(fields: [customerId], references: [id])
  store            Store          @relation(fields: [storeId], references: [id], onDelete: Cascade)
  // Attribution fields - track who performed critical operations
  issuedByUserId   String?
  settledByUserId  String?
  cancelledByUserId String?
  issuedBy         User?          @relation("IssuedBy", fields: [issuedByUserId], references: [id])
  settledBy        User?          @relation("SettledBy", fields: [settledByUserId], references: [id])
  cancelledBy      User?          @relation("CancelledBy", fields: [cancelledByUserId], references: [id])

  @@map("invoices")
}

model InvoiceItem {
  id        String  @id @default(uuid())
  invoiceId String
  productId String
  quantity  Int
  unitPrice Decimal @db.Decimal(10, 2)
  invoice   Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])

  @@map("invoice_items")
}

model Payment {
  id        String      @id @default(uuid())
  storeId   String
  invoiceId String      @unique
  amount    Decimal     @db.Decimal(10, 2)
  method    PaymentType
  createdAt DateTime    @default(now())
  store     Store       @relation(fields: [storeId], references: [id], onDelete: Cascade)
  invoice   Invoice     @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@map("payments")
}

enum InvoiceStatus {
  DRAFT
  ISSUED
  UNPAID
  PAID
  CANCELLED
}

enum PaymentType {
  CASH
  CREDIT
}

enum LedgerEntryType {
  SALE
  RECEIPT
}

model LedgerEntry {
  id        String           @id @default(uuid())
  storeId   String
  invoiceId String
  type      LedgerEntryType
  amount    Decimal          @db.Decimal(10, 2)
  createdAt DateTime         @default(now())
  store     Store            @relation(fields: [storeId], references: [id], onDelete: Cascade)
  invoice   Invoice          @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@map("ledger_entries")
}

// Audit Log Model - Immutable audit trail of all critical operations
model AuditLog {
  id         String   @id @default(uuid())
  storeId   String
  userId    String
  action    String
  entityType String
  entityId  String
  metadata  Json?
  createdAt DateTime  @default(now())
  store     Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@map("audit_logs")
}

// Plan Model - B1: Subscription plan definitions (B2: Extended with pricing relation)
model Plan {
  id          String              @id @default(uuid())
  code        String              @unique
  name        String
  description String?
  limits      Json                // e.g. { invoicesPerMonth: 500, users: 3 }
  features    Json                // e.g. { ledger: true, reports: true }
  createdAt   DateTime            @default(now())
  subscriptions StoreSubscription[]
  pricing     PlanPricing[]

  @@map("plans")
}

enum SubscriptionStatus {
  ACTIVE
  SUSPENDED
}

// BillingCycle Enum - B2: Defines billing cycle options (MONTHLY, YEARLY)
enum BillingCycle {
  MONTHLY
  YEARLY
}

// Plan Model - B1: Subscription plan definitions (FOUNDATION ONLY: No pricing, no billing cycles)
model Plan {
  id          String              @id @default(uuid())
  code        String              @unique
  name        String
  description String?
  limits      Json                // e.g. { invoicesPerMonth: 500, users: 3 }
  features    Json                // e.g. { ledger: true, reports: true }
  createdAt   DateTime            @default(now())
  subscriptions StoreSubscription[]
  pricing     PlanPricing[]

  @@map("plans")
}

// PlanPricing Model - B2: Pricing definitions for plans (READ-ONLY, no enforcement)
model PlanPricing {
  id          String        @id @default(uuid())
  planId      String
  billingCycle BillingCycle
  priceCents  Int           // Price in cents (no decimals)
  currency    String        // e.g. "USD"
  createdAt   DateTime      @default(now())
  plan        Plan          @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@unique([planId, billingCycle])
  @@map("plan_pricing")
}

// Store Subscription Model - B1: Links Store to Plan (FOUNDATION ONLY: No billing cycles, no expiration)
model StoreSubscription {
  id        String              @id @default(uuid())
  storeId   String              @unique
  planId    String
  startedAt DateTime            @default(now())
  status    SubscriptionStatus  @default(ACTIVE)
  plan      Plan                @relation(fields: [planId], references: [id], onDelete: Restrict)

  @@map("store_subscriptions")
}