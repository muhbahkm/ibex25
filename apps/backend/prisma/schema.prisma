generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id        String     @id @default(uuid())
  name      String
  createdAt DateTime   @default(now())
  customers Customer[]
  invoices  Invoice[]
  products  Product[]
  users     User[]
  payments  Payment[]

  @@map("stores")
}

model User {
  id                String    @id @default(uuid())
  email             String    @unique
  storeId           String
  createdAt         DateTime  @default(now())
  createdInvoices   Invoice[] @relation("CreatedBy")
  issuedInvoices    Invoice[] @relation("IssuedBy")
  settledInvoices   Invoice[] @relation("SettledBy")
  cancelledInvoices Invoice[] @relation("CancelledBy")
  store             Store     @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@map("users")
}

model Customer {
  id        String    @id @default(uuid())
  name      String
  storeId   String
  isGuest   Boolean   @default(false)
  createdAt DateTime  @default(now())
  store     Store     @relation(fields: [storeId], references: [id], onDelete: Cascade)
  invoices  Invoice[]

  @@map("customers")
}

model Product {
  id           String        @id @default(uuid())
  name         String
  price        Decimal       @db.Decimal(10, 2)
  stock        Int
  storeId      String
  createdAt    DateTime      @default(now())
  invoiceItems InvoiceItem[]
  store        Store         @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@map("products")
}

model Invoice {
  id               String        @id @default(uuid())
  storeId          String
  customerId       String?
  status           InvoiceStatus @default(DRAFT)
  totalAmount      Decimal       @db.Decimal(10, 2)
  paymentType      PaymentType?
  createdBy        String
  createdAt        DateTime      @default(now())
  items            InvoiceItem[]
  payment          Payment?
  creator          User          @relation("CreatedBy", fields: [createdBy], references: [id])
  customer         Customer?     @relation(fields: [customerId], references: [id])
  store            Store         @relation(fields: [storeId], references: [id], onDelete: Cascade)
  // Attribution fields - track who performed critical operations
  issuedByUserId   String?
  settledByUserId  String?
  cancelledByUserId String?
  issuedBy         User?         @relation("IssuedBy", fields: [issuedByUserId], references: [id])
  settledBy        User?         @relation("SettledBy", fields: [settledByUserId], references: [id])
  cancelledBy      User?         @relation("CancelledBy", fields: [cancelledByUserId], references: [id])

  @@map("invoices")
}

model InvoiceItem {
  id        String  @id @default(uuid())
  invoiceId String
  productId String
  quantity  Int
  unitPrice Decimal @db.Decimal(10, 2)
  invoice   Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])

  @@map("invoice_items")
}

model Payment {
  id        String      @id @default(uuid())
  storeId   String
  invoiceId String      @unique
  amount    Decimal     @db.Decimal(10, 2)
  method    PaymentType
  createdAt DateTime    @default(now())
  store     Store       @relation(fields: [storeId], references: [id], onDelete: Cascade)
  invoice   Invoice     @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@map("payments")
}

enum InvoiceStatus {
  DRAFT
  ISSUED
  UNPAID
  PAID
  CANCELLED
}

enum PaymentType {
  CASH
  CREDIT
}
